<view class="menu-icon-card" style="width:{{width ? width : 'auto'}};height:{{height ? height : 'auto'}};">
  <image  src="{{images}}" class="menu-icon" />
  <view class="text-container">
    <text class="menu-name" style="font-size:{{fontSize ? fontSize : '25rpx'}};color:{{color ? color : 'black'}};">{{name}}</text>
  </view>
</view>