<button class="dropdown-toggle" onTap="handlePopupShow">
  {{valueData ? valueData : defaultValue}} ‚åµ
</button>

<view a:if="{{ type == "selector" }}">
  <popup visible="{{scrollVisible}}" position="bottom" animation="{{animation}}" onClose="handlePopupClose">
    <scroll-view scroll-y class="popupContainer">
        <view class="popupContent">
          <text class="title">{{title}}</text>
          <radio-group class="radio-group" onChange="radioChange" name="{{name}}">
            <label a:for="{{items}}" class="radio" key="label-{{index}}">
              <radio
                color="orange"
                value="{{item.name}}"
                checked="{{item.checked}}"
                disabled="{{item.disabled}}"
              />
              <text class="radio-text">{{item.value}}</text>
            </label>
          </radio-group>
        </view>
        <view class="btn-container">
          <button-bni size="medium" formType="reset" color="#FFFFFF">Reset</button-bni>
          <button-bni size="medium" onTap="onSubmit" >Submit</button-bni>
        </view>
    </scroll-view>
  </popup>
</view>

