.main-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
  padding: 0rpx 50rpx;
  font-family: Montserrat-SemiBold;
}

.heading {
  background: orange;
  min-height: 300rpx;
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: larger;
  font-weight: 800;
}

.card-banner {
  display: flex;
  justify-content: center;
  width: 93%;
  min-height: 170rpx;
  background: white;
  border-radius: 15rpx;
  color: red;
  font-size: xx-large;
  align-items: center;
  font-weight: 900;
  gap: 20rpx;
  position: absolute;
  top: 200rpx;
  box-shadow: 1px 1px 10px 0.4px rgba(168, 168, 168, 0.362);
}

.card-banner text {
  font-size: medium;
  font-weight: 500;
  flex-shrink: 0;
  display: flex;
  color: red;
  align-items: flex-end;
  padding-top: 20rpx;
}

.main-content {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 60rpx;
}

.report-card {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.title-conten {
  font-size: larger;
  font-weight: 600;
}

.content {
  color: rgb(162, 162, 162);
  display: flex;
  justify-content: space-between;
}

.value-content {
  color: red;
}

.message-content {
  display: flex;
  flex-direction: column;
  color: rgb(162, 162, 162);
  gap: 20rpx;
}

.greeting {
  font-weight: 700;
  color: black;
}

.tag {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag text {
  color: rgb(162, 162, 162);
}