.container-main {
  width: calc(100% - 40rpx);
  min-height: 100vh;
  height: 100%;
  background-color: white;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section1 {
  width: calc(100% - 40rpx);
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center; 
}

.section2 {
  width: calc(100% - 38rpx);
  margin-top:20rpx;  
  display:flex; 
  justify-content: space-around; 
  gap:25rpx;
}

.section3 {
  margin-top: 15rpx;
}